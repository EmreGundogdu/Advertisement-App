@model List<AdvertisementListDto>

<div class="container-fluid">
    @if (Model?.Count > 0)
    {
        <div class="text-end my-3 p-2">

            <a asp-action="ApprovedList" asp-controller="Advertisement">Yeni lan Oluştur</a>
        </div>
        <table class=" mt-3 table table-sm table-hover table-striped">
            <thead>
                <tr>
                    <th>İlan Adı</th>
                    <th>Oluşturulma Tarihi</th>
                    <th>Durumu</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var advertisement in Model)
                {
                    <tr>
                        <td>@advertisement.Title</td>
                        <td>@advertisement.CreatedTime.ToString("dddd, dd MM yyyy")</td>
                        <td>@(advertisement.Status?"Aktif":"Pasif")</td>
                        <td>
                            <a asp-action="Update" asp-controller="Application">Güncelle</a> |
                            <a asp-action="Remove" asp-controller="Application" >Sil</a> 
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
<div class="text-end my-3 p-2">
    <a asp-action="ApprovedList" asp-controller="Advertisement">Yeni lan Oluştur</a>

</div>
        <div class="mt-3 text-center lead">Herhangi bir ilan bulunmamaktadır.</div>
    }
</div>